{
  "name": "mocha-aura",
  "description": "Test Salesforce Aura Lightning components with mocha",
  "author": {
    "name": "Yuriy Sannikov",
    "email": "yury.sannikov@gmail.com"
  },
  "version": "0.0.5",
  "main": "./dist/index.js",
  "license": "MIT",
  "keywords": [
    "Salesforce",
    "force.com",
    "Aura",
    "Lightning",
    "mocha",
    "istanbul"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run init",
    "build": "babel ./lib -d ./dist",
    "test": "mocha --compilers js:babel-core/register 'specs/*.js'",
    "watch": "chokidar --initial './specs/**' './lib/*.js' -c 'npm run test'",
    "coverage": "istanbul cover -x 'specs/*.js' --root './lib' --include-all-sources ./node_modules/mocha-runner/bin/runner.js -- 'specs/*.js' html text-summary"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-register": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "istanbul": "^0.4.5",
    "mocha-runner": "^1.1.2"
  },
  "dependencies": {
    "app-module-path": "^2.2.0",
    "help": "^3.0.2",
    "lodash": "^4.17.4",
    "mocha": "^3.3.0",
    "sinon": "^2.3.0",
    "sinon-chai": "^2.10.0"
  }
}
